<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".MainActivity"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/pair_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_bluetooth_disabled_white_24px"
                android:background="@drawable/background_unpair_btn"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:visibility="visible"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="10dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/linearLayout"
                android:layout_marginTop="14dp" />

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                android:id="@+id/linearLayout">


                <ImageView
                        android:layout_width="114dp"
                        android:layout_height="103dp"
                        android:layout_margin="16dp"
                        android:adjustViewBounds="true"
                        android:src="@mipmap/model"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_horizontal"
                        android:text="Build Complex Things,\nSimply"
                        android:textAppearance="@style/TextStyleMedium"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"/>

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                    android:id="@+id/text_battery_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:gravity="center"
                    android:text="0"
                    android:textAppearance="@style/TextStyleSmall"
                    android:textColor="@android:color/black"
                    android:textSize="8sp"
                    android:background="@drawable/ic_battery_std_white_24px"
            />

            <!--
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/ic_battery_std_white_24px"/>
                -->

            <FrameLayout
                android:layout_width="2dp"
                android:layout_height="24dp"
                android:background="@color/color_white"
                />


            <TextView
                android:id="@+id/text_model_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="No Device"
                android:textAppearance="@style/TextStyleSmall"
                android:textColor="@android:color/white"
                android:textStyle="bold"
               />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_margin="16dp"
            android:textColor="@android:color/white"
            android:textAppearance="@style/TextStyleMedium"
            android:visibility="gone"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:gravity="center"
        android:layout_weight="1">

        <com.zglue.zgluesports.CustomGridView
            android:id="@+id/content_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:stretchMode="columnWidth"
            android:numColumns="2"
            android:horizontalSpacing="5dp"
            android:verticalSpacing="12dp"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="right"
        android:layout_margin="16dp"
        android:adjustViewBounds="true"
        app:srcCompat="@mipmap/logo"
        android:alpha="0.75"/>


</LinearLayout>