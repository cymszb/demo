<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextStyleTitle" parent="TextAppearance.AppCompat.Title">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif</item>
    </style>


    <style name="TextStyleLarge" parent="TextAppearance.AppCompat.Large">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-light</item>
    </style>

    <style name="TextStyleMedium" parent="TextAppearance.AppCompat.Medium">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-light</item>
    </style>

    <style name="TextStyleSmall" parent="TextAppearance.AppCompat.Small">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-light</item>
    </style>

    <style name="TextStyleDescription" parent="TextStyleSmall">
        <!-- Customize your theme here. -->
        <item name="android:textColor" >@color/color_grey</item>
    </style>

    <style name="TextStyleNumber" parent="TextStyleLarge">
        <!-- Customize your theme here. -->
        <item name="android:textColor" >@color/color_white</item>
    </style>

    <style name="ProgressBar.Blue" parent="@android:style/Widget.Holo.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/progress_bar_blue</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:indeterminate">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">18dip</item>
        <item name="android:maxWidth">18dip</item>
        <item name="android:minHeight">18dip</item>
        <item name="android:maxHeight">18dip</item>
    </style>

</resources>
